{{template "base/head" .}}
<div role="main" aria-label="{{.Title}}" class="page-content user signin openid">
	{{template "user/auth/signin_navbar" .}}
	<div class="ui container">
		{{template "base/alert" .}}
		<h3 class="sc-title sc-title_h3 sc-title_monospace sc-title_center">
			{{svg "fontawesome-openid"}}
			OpenID
		</h3>
		<div class="sc-box sc-box_borderless">
			<form class="ui form" action="{{.Link}}" method="post">
			{{.CsrfTokenHtml}}
			<div class="inline field">
				{{.locale.Tr "auth.openid_signin_desc"}}
			</div>
			<div class="required inline field {{if .Err_OpenID}}error{{end}}">
				<label for="openid">
				{{svg "fontawesome-openid"}}
				OpenID URI
				</label>
				<input id="openid" name="openid" value="{{.openid}}" autofocus required>
			</div>
			<div class="inline field">
				<label></label>
				<div class="ui checkbox">
					<label>{{.locale.Tr "auth.remember_me"}}</label>
					<input name="remember" type="checkbox">
				</div>
			</div>
			<div class="inline field">
				<label></label>
				<button class="sc-button sc-button_primary">{{.locale.Tr "sign_in"}}</button>
			</div>
			</form>
		</div>
	</div>
</div>
{{template "base/footer" .}}
