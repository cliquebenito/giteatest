  <div id="v-app-codehub-filter-switch" data-label="{{CodeHubToggleName}}">
		<label class="sc-codehub-wrapper" role="switch">
			<div class="sc-codehub-switch">
				<input type="checkbox" disabled />
				<span class="sc-codehub-slider round"></span>
			</div>
			<span class="sc-codehub-label">{{ CodeHubToggleName }}</span>
		</label>
	</div>

	<style>
		.sc-codehub-wrapper{
			display: flex;
			align-items: center;
			column-gap: 8px;
			cursor: pointer;
		}

		/* The switch - the box around the slider */
		.sc-codehub-switch {
			position: relative;
			display: inline-block;
			width: 40px;
			height: 20px;
		}

		/* Hide default HTML checkbox */
		.sc-codehub-switch input {
			opacity: 0;
			width: 0;
			height: 0;
		}

		/* The slider */
		.sc-codehub-slider {
			position: absolute;
			cursor: pointer;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background-color: rgb(211, 219, 223);
		}

		.sc-codehub-slider:before {
			position: absolute;
			content: "";
			height: 16px;
			width: 16px;
			left: 2px;
			bottom: 2px;
			background-color: white;
			-webkit-transition: .4s;
			transition: .4s;
		}

		.sc-codehub-switch input:checked + .slider {
			background-color: rgb(25, 118, 210);
		}

		.sc-codehub-switch input:focus + .slider {
			box-shadow: 0 0 1px rgb(25, 118, 210);
		}

		.sc-codehub-switch input:checked + .slider:before {
			-webkit-transform: translateX(20px);
			-ms-transform: translateX(20px);
			transform: translateX(20px);
		}

		/* Rounded sliders */
		.sc-codehub-slider.round {
			border-radius: 20px;
		}

		.sc-codehub-slider.round:before {
			border-radius: 50%;
		}
	</style>
